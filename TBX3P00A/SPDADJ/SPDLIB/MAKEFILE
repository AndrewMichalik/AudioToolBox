#
# Standard compiler command line switches
#	d       Redefined macros
#	c       No link
#	AM      Medium memory model
#	Gsw     Stack probes & Windows
#	G2      80286 Instruction Set
#	G3      80386 Instruction Set
#	Gh      C5.1 compatible object
#	Ox      Max optimization (Note: C6.00a float op error for "ei")
#	Od      No optimization
#	W2      Intermediate warning level
#	Zd      Symbolic Debug
#	Zi      CodeView Debug
#	NT      Named text (code area) follows
#	Alnw	Check for DS==SS
#	V       Imbed version string
#
# Standard linker command line switches
#   NOD     No default library
#   A:x     Segment alignment (default = 512 bytes)
#   ST:x    Stack size larger than default 0x800 (2048)

# -----------------------------------------------------------------------
# Compile and Link options (distribution & debug)
# -----------------------------------------------------------------------
!IFDEF deb
# ---- DEBUG ----
ap=masm/MX/V/ZI
cp=cl -c -FoObject\ $(W_Defs) -D$(C_Defs) -V$(V_Note) $(M_Type) -W3 -G2  -Zp -Od -Zi
lp=link/NOD/NOE/NOI/M/CO$(L_Defs)
!ELSE
# ---- Default: DISTRIBUTION ----
ap=masm/MX/V
cp=cl -c -FoObject\ $(W_Defs) -D$(C_Defs) -V$(V_Note) $(M_Type) -W3 -G2s -Zp -Ocglt  
lp=link/NOD/NOE/NOI/M$(L_Defs)
!ENDIF

# -----------------------------------------------------------------------
# Version Control and Copyright Defs
# -----------------------------------------------------------------------
V_Note = "Copyright AJM, 800-234-VISI"

# -----------------------------------------------------------------------
# Library specific build arguments
# -----------------------------------------------------------------------
!IFDEF mwe
# ---- MS Windows Emulator ----
W_Defs = -DW31
M_Type = -AMw -FPi -Gw
M_Name = mwe
L_Libs = libw+mlibcew
DLLLib = libw+mdllcew
rd = rc $(W_Defs) -D$(C_Defs)
rc = rc $(W_Defs) -D$(C_Defs)
DstPth = ..\..\reldev^\
!ELSE
!IFDEF mme
# ---- MS Medium Emulator ----
W_Defs = -DDOS
M_Type = -AM -FPi
M_Name = mme
L_Libs = mlibce
DstPth = ..\..\reldev^\
!ELSE
# ---- DEFAULT MS Large Emulator ----
W_Defs = -DDOS
M_Type = -AL -FPi
M_Name = mle
L_Libs = llibce
DstPth = ..\..\reldev^\
!ENDIF
!ENDIF

# -----------------------------------------------------------------------
# Hardware specific build paths
# -----------------------------------------------------------------------
!IFDEF g21
# ---- CCITT G.721 ----
C_Defs = G21
P_Defs = -D_P_DLG -D_P_G11 -D_P_MSW
!ELSE
!IFDEF har
# ---- HARRIS ----
C_Defs = HAR
P_Defs = -D_P_DLG -D_P_G11 -D_P_MSW
!ELSE
!IFDEF nwv
# ---- NEW VOICE ----
C_Defs = NWV
P_Defs = -D_P_DLG -D_P_G11 -D_P_MSW
!ELSE
!IFDEF mpc
# ---- MPC ----
C_Defs = MPC
P_Defs = -D_P_MSW
!ELSE
!IFDEF ptc
# ---- PTC ----
C_Defs = PTC
P_Defs = -D_P_DLG -D_P_G11 -D_P_MSW
!ELSE
!IFDEF rtx
# ---- RHETOREX ----
C_Defs = RTX
P_Defs = -D_P_DLG -D_P_G11 -D_P_MSW
!ELSE
!IFDEF tti
# ---- TTI ----
C_Defs = TTI
P_Defs = -D_P_MSW
!ELSE
# ---- DEFAULT DIALOGIC ----
C_Defs = DLG
P_Defs = -D_P_G11 -D_P_MSW
!ENDIF
!ENDIF
!ENDIF
!ENDIF
!ENDIF
!ENDIF
!ENDIF

# -----------------------------------------------------------------------
# Standard inference rules
# -----------------------------------------------------------------------
.c{object\}.obj:
    $(cp) $(@B).c
.cpp{object\}.obj:
    $(cp) $(@B).cpp

# -----------------------------------------------------------------------
# The Target File List
# -----------------------------------------------------------------------
!IF (DEFINED (mwe))
$(DstPth)$(C_Defs)spd.dll: $(C_Defs)spd.def                             \
            object\spdini.obj                                           \
            object\fillod.obj object\fileff.obj object\effftr.obj       \
            object\wavfil.obj object\visfil.obj                         \
            object\filsup.obj object\fillow.obj                         \
            object\winmem.obj object\winmsg.obj                         \
            object\cfgsup.obj
    $(lp)   $(LibEnt) @alllnk.rsp @$(C_Defs)lnk.rsp $(DLLLib), $(C_Defs)spd.def;
    $(rd)   genspd.rc  genspd.dll
    implib  genspd.lib $(C_Defs)spd.def
    copy    genspd.h   $(DstPth)dev\spdlib
    copy    genspd.lib $(DstPth)dev\spdlib\$(C_Defs)mwe.lib
    copy    genspd.lib $(C_Defs)mwe.lib
    copy    genspd.dll $(DstPth)w31\$(C_Defs)spd.dll
    copy    genspd.dll $(C_Defs)spd.dll
!ELSE
$(C_Defs)$(M_Name).lib:                                                 \
            object\spdini.obj                                           \
            object\fillod.obj object\fileff.obj object\effftr.obj       \
            object\effvol.obj object\effchn.obj                         \
            object\efffqs.obj object\fqsmst.obj object\fqsobs.obj       \
            object\firdes.obj object\efffft.obj                         \
            object\fftovr.obj object\fftlow.obj                         \
            object\effebs.obj object\ebssup.obj                         \
            object\wavfil.obj object\visfil.obj                         \
            object\pcmfio.obj object\pcmini.obj object\pcmqry.obj       \
            object\blkcvt.obj object\mpcsup.obj                         \
            object\filsup.obj object\fillow.obj                         \
            object\dosmem.obj object\dosmsg.obj                         \
            object\usrstb.obj object\cfgsup.obj
    del     $(C_Defs)$(M_Name).lib
    lib     $(C_Defs)$(M_Name).lib @all$(M_Name).rsp @$(C_Defs)$(M_Name).rsp;
    copy    genspd.h               $(DstPth)dev\spdlib
    copy    $(C_Defs)$(M_Name).lib $(DstPth)dev\spdlib 
!ENDIF

